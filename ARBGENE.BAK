domains
	persona=symbol
	dia=integer
	mes=integer
	anio=integer
	sexo=symbol
predicates
	pom(persona,persona)	
	par(persona,persona,dia,mes,anio)
/*	split(persona,persona,dia,mes,anio) */
	nac(persona,sexo,dia,mes,anio)	


	/* ------------------*/
	padre(persona,persona)
	madre(persona,persona) 
	padreNeutro(persona,persona)
	
	hijo(persona,persona)
	hija(persona,persona)
	hij#(persona,persona)
clauses
	padre(Y,X):- pom(Y,X),nac(Y,hombre,_,_,_).
	madre(Y,X):- pom(Y,X),nac(Y,mujer,_,_,_).
	padreNeutro(Y,X):- pom(Y,X),nac(Y,neutro,_,_,_).
	
	hijo(X,Y):- pom(Y,X),nac(Y,hombre,_,_,_).
	hija(X,Y):- pom(Y,X),nac(Y,mujer,_,_,_).
	hij#(X,Y):- pom(Y,X),nac(Y,neutro,_,_,_).	
	
	
